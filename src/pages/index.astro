---
import Layout from '../layouts/Layout.astro';
import { Button } from '@heroui/react';
---

<Layout title="BeatFox">
  <main class="mx-auto px-4 py-8 container">
    <div class="space-y-6 text-center">
      <h1 class="font-bold text-gray-900 text-4xl">Welcome to BeatFox</h1>
      <p class="text-gray-600 text-lg">
        Your development environment is ready!
      </p>
      <div class="space-x-4">
        <Button color="primary" client:visible> Get Started </Button>
        <Button color="secondary" variant="bordered" client:visible>
          Learn More
        </Button>
      </div>
    </div>
  </main>
</Layout>
